# Production Environment Configuration Template
# Copy this file to .env.production and update the values

# Application
NODE_ENV=production
PORT=3001

# API Configuration - Leave empty for nginx proxy, or set to your domain
VITE_API_BASE_URL=

# Cache Configuration
CACHE_MAX_SIZE=2000
CACHE_TTL_MINUTES=120

# Security - Add your domain and nginx proxy origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:8080

# OpenAI Configuration (optional - remove if not using LLM generation)
# OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=info

# Performance
MAX_REQUEST_SIZE=2097152
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_TIMEOUT=5000