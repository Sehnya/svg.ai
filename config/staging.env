# Staging Environment Configuration
# Copy this file to .env.staging and fill in actual values

# Application
NODE_ENV=staging
PORT=3001
HOSTNAME=0.0.0.0

# Database
DATABASE_URL=postgresql://username:password@staging-db:5432/svg_ai_staging
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://staging-redis:6379/0
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE=5000

# OpenAI API
OPENAI_API_KEY=sk-your-staging-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.2

# Security
JWT_SECRET=staging-jwt-secret-key
CORS_ORIGINS=https://staging.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=debug
SENTRY_DSN=https://your-staging-sentry-dsn-here

# Performance
MAX_REQUEST_SIZE=10mb
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=3600

# Features
ENABLE_ANALYTICS=true
ENABLE_FEEDBACK=true
ENABLE_ADMIN_DASHBOARD=true

# External Services
CDN_URL=https://staging-cdn.yourdomain.com
BACKUP_STORAGE_URL=s3://your-staging-backup-bucket